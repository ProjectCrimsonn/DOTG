<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DOTG" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/theme_black</item>
        <item name="colorOnPrimary">@color/theme_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/theme_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="dark_background" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cardBackgroundColor">@color/theme_grey</item>
        <item name="android:textColor">@color/theme_black</item>
    </style>
    <style name="light_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/secondary_grey</item>
    </style>
    <style name="dark_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/theme_black</item>
    </style>
    <style name="alternate_background" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/theme_grey</item>
    </style>

</resources>