<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DOTG" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_black</item>
        <item name="colorPrimaryVariant">@color/theme_grey</item>
        <item name="colorOnPrimary">@color/theme_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/theme_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#9F9F9F</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="all_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textViewStyle">@style/text_font</item>
    </style>

    <style name="text_font" parent="android:Widget.TextView">
        <item name="fontFamily">@font/barlow_condensed_medium</item>
    </style>

    <style name="dark_background" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cardBackgroundColor">@color/theme_black</item>
        <item name="android:textColor">@color/theme_grey</item>
    </style>

    <style name="roundedImageStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="alternate_background" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/theme_black</item>
    </style>

    <style name="light_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/theme_black</item>
    </style>

    <style name="dark_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/theme_grey</item>
    </style>

    <style name="all_text.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="all_text.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="all_text.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>